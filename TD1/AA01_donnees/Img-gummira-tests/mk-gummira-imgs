#!/bin/sh

ARGV0=$(basename $0)

if [ $# -ne 3 ]
then
    echo "Usage: $ARGV0 WIDTH N NAME" > /dev/tty
    exit 1
fi

WIDTH=$1
N=$2
NAME="$3"

set -x
img-gummira $WIDTH -0.5355 1.0 1.0 1.0 $N ${NAME}_01.png
img-gummira $WIDTH -0.4849900881 0.9758744406 -7.51072037 13.66255124 $N ${NAME}_02.png
img-gummira $WIDTH -0.75039721 1.0 -5.0 -11.0 $N ${NAME}_03.png
img-gummira $WIDTH 0.266865349 1 -0.7921202843 -0.16530339760 $N ${NAME}_04.png
img-gummira $WIDTH -0.869471195 1 1 15 $N ${NAME}_05.png
img-gummira $WIDTH -0.7842208082 0.9890020033 4.08073727 12.21132774 $N ${NAME}_06.png
img-gummira $WIDTH -0.6285 1 -5.2 -9 $N ${NAME}_07.png
img-gummira $WIDTH 0.368164112 1 5.64147642 2.07640240 $N ${NAME}_08.png
img-gummira $WIDTH -0.6286990697 1 4 6 $N ${NAME}_09.png
img-gummira $WIDTH -0.4241828808 0.951219909 6.03780286 -5.70218011 $N ${NAME}_10.png
